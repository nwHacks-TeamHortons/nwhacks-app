<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamhortons.nwhacksapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityCreate"
            android:label="CreateActivity">
        </activity>
        <activity android:name=".ActivityChallenges"
            android:label="ChallengesActivity">
        </activity>
        <activity android:name=".ActivityAbout"
            android:label="AboutActivity">
        </activity>
        <activity android:name=".ActivityFind"
            android:label="FindActivity">
        </activity>
        <activity android:name=".ShareDialog"
            android:label="ShareDialog">
            </activity>
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>

    </application>

    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="16" />


</manifest>
